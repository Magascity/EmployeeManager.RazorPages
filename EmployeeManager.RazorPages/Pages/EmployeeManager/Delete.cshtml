@page "{id}"
@model DeleteModel

<h2 class="mt-4">Delete Existing Employee</h2>

<div class="alert alert-warning">
    <strong>Warning:</strong> You are about to delete an employee record!
</div>

@if (Model.dataFound)

{
    <form method="post" class="mb-3">
        <input type="hidden" asp-for="Employee.EmployeeID" />

        <div class="mb-3 row">
            <label asp-for="Employee.EmployeeID" class="col-sm-2 col-form-label fw-bold"></label>
            <div class="col-sm-10">
                <p class="form-control-plaintext">@Model.Employee.EmployeeID</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Employee.FirstName" class="col-sm-2 col-form-label fw-bold"></label>
            <div class="col-sm-10">
                <p class="form-control-plaintext">@Model.Employee.FirstName</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Employee.LastName" class="col-sm-2 col-form-label fw-bold"></label>
            <div class="col-sm-10">
                <p class="form-control-plaintext">@Model.Employee.LastName</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Employee.Title" class="col-sm-2 col-form-label fw-bold"></label>
            <div class="col-sm-10">
                <p class="form-control-plaintext">@Model.Employee.Title</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Employee.BirthDate" class="col-sm-2 col-form-label fw-bold"></label>
            <div class="col-sm-10">
                <p class="form-control-plaintext">@Model.Employee.BirthDate.ToString("dd MMMM yyyy")</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Employee.HireDate" class="col-sm-2 col-form-label fw-bold"></label>
            <div class="col-sm-10">
                <p class="form-control-plaintext">@Model.Employee.HireDate.ToString("dd MMMM yyyy")</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Employee.Country" class="col-sm-2 col-form-label fw-bold"></label>
            <div class="col-sm-10">
                <p class="form-control-plaintext">@Model.Employee.Country</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Employee.Notes" class="col-sm-2 col-form-label fw-bold"></label>
            <div class="col-sm-10">
                <p class="form-control-plaintext">@Model.Employee.Notes</p>
            </div>
        </div>

        <div class="d-flex justify-content-start">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="List" class="btn btn-secondary ms-2">Back to Employee Listing</a>
        </div>
    </form>
}
