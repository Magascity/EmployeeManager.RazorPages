@page "{id:int}"
@model UpdateModel

<h2 class="mt-4">Update Existing Employee</h2>

@if (!string.IsNullOrEmpty(Model.Message))

{
    <div class="alert alert-info">
        @Model.Message
    </div>
}

@if (Model.DataFound)

{
    <form method="post" class="mb-3">
        <input type="hidden" asp-for="Employee.EmployeeID" />

        <div class="mb-3 row">
            <label asp-for="Employee.EmployeeID" class="col-sm-2 col-form-label fw-bold">Employee ID</label>
            <div class="col-sm-10">
                <p class="form-control-plaintext">@Model.Employee.EmployeeID</p>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Employee.FirstName" class="form-label fw-bold"></label>
            <input type="text" asp-for="Employee.FirstName" class="form-control" />
            <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Employee.LastName" class="form-label fw-bold"></label>
            <input type="text" asp-for="Employee.LastName" class="form-control" />
            <span asp-validation-for="Employee.LastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Employee.Title" class="form-label fw-bold"></label>
            <input type="text" asp-for="Employee.Title" class="form-control" />
            <span asp-validation-for="Employee.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Employee.BirthDate" class="form-label fw-bold"></label>
            <input type="date" asp-for="Employee.BirthDate" class="form-control" />
            <span asp-validation-for="Employee.BirthDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Employee.HireDate" class="form-label fw-bold"></label>
            <input type="date" asp-for="Employee.HireDate" class="form-control" />
            <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Employee.Country" class="form-label fw-bold"></label>
            <select asp-for="Employee.Country" asp-items="@Model.Countries" class="form-select">
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="Employee.Country" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Employee.Notes" class="form-label fw-bold"></label>
            <textarea asp-for="Employee.Notes" rows="5" class="form-control"></textarea>
            <span asp-validation-for="Employee.Notes" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-start">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="List" class="btn btn-secondary ms-2">Back to Employee Listing</a>
        </div>
    </form>
}
